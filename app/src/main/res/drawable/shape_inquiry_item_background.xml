<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="#80dbddff">
    <item>
        <selector>
            <item android:state_selected="false">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorSubscriptionInquiryItemBg"/>
                    <corners android:radius="@dimen/dp_8"/>
                </shape>
            </item>
            <item android:state_selected="true">
                <layer-list>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/colorSubscriptionBackground"/>
                            <corners android:radius="@dimen/dp_8"/>
                        </shape>
                    </item>
                    <item>
                        <shape android:shape="rectangle">
                            <solid android:color="@color/colorSubscriptionInquiryItemSelectBg"/>
                            <corners android:radius="@dimen/dp_8"/>
                        </shape>
                    </item>
                </layer-list>
            </item>
        </selector>
    </item>
</ripple>
