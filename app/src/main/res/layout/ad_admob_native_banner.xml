            </LinearLayout>
            <TextView android:textSize="@dimen/sp_12" android:textColor="@color/colorAdPrimaryText" android:ellipsize="end" android:id="@+id/ad_describe_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dp_4" android:maxLines="2" android:textAlignment="viewStart" style="@style/TextViewFont_RobotoRegular"/>
        </LinearLayout>
        <ImageView android:id="@+id/ad_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_native_banner_ad_dark" android:layout_alignParentBottom="true" android:layout_alignParentStart="true"/>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ad_choices_linearLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignBottom="@+id/native_layout" android:layout_alignParentEnd="true"/>
</RelativeLayout>
