<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/ad_native_banner_background" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:id="@+id/native_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:minHeight="60dp">
        <RelativeLayout android:id="@+id/ad_icon_layout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="8dp" android:layout_centerVertical="true">
            <ImageView android:layout_gravity="center_vertical" android:id="@+id/ad_icon_imageview" android:layout_width="@dimen/ad_native_banner_icon_size" android:layout_height="@dimen/ad_native_banner_icon_size" android:layout_centerInParent="true"/>
            <LinearLayout android:orientation="horizontal" android:id="@+id/ad_icon_container" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true"/>
        </RelativeLayout>
        <Button android:textSize="13sp" android:textColor="@color/ad_native_banner_button_text_color" android:id="@+id/ad_action_button" android:background="@drawable/ad_native_bunner_btn_background" android:padding="8dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp" android:maxWidth="80dp" android:text="Install" android:maxLines="1" android:layout_alignParentRight="true" android:layout_centerVertical="true" android:fontFamily="@string/arg_res_0x7f130432"/>
        <LinearLayout android:gravity="center_vertical" android:orientation="vertical" android:id="@+id/text_layout" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="8dp" android:layout_toLeftOf="@+id/ad_action_button" android:layout_toRightOf="@+id/ad_icon_layout">
            <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="14sp" android:textColor="@color/ad_native_card_title_color" android:ellipsize="end" android:layout_gravity="center_vertical" android:id="@+id/ad_title_textview" android:layout_width="0dp" android:layout_height="wrap_content" android:text="title" android:maxLines="1" android:layout_weight="1" android:fontFamily="@string/arg_res_0x7f130432"/>
                <ImageView android:layout_gravity="center_vertical" android:id="@+id/ad_icon" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="4dp" android:src="@drawable/ad_mark"/>
            </LinearLayout>
            <TextView android:textSize="12sp" android:textColor="@color/ad_native_card_title_color" android:ellipsize="end" android:id="@+id/ad_describe_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="body" android:maxLines="2" android:fontFamily="@string/arg_res_0x7f130433"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout android:orientation="vertical" android:id="@+id/ad_choices_linearLayout" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="1dp" android:layout_marginBottom="1dp" android:layout_alignTop="@+id/native_layout" android:layout_alignParentRight="true">
        <ImageView android:id="@+id/ad_choices_imageview" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>
